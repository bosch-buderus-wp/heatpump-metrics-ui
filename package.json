{
  "name": "heatpump-metrics-ui",
  "version": "1.0.7",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/bosch-buderus-wp/heatpump-metrics-ui.git"
  },
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:dev": "vite build --mode development",
    "build:prod": "vite build --mode production",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "preview": "vite preview",
    "prepare": "husky",
    "release": "npm run release:tag && npm run release:push",
    "release:tag": "git tag v$(node -p \"require('./package.json').version\")",
    "release:push": "git push origin v$(node -p \"require('./package.json').version\")"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/icons-material": "^7.3.6",
    "@mui/material": "^7.3.6",
    "@mui/x-data-grid": "^8.21.0",
    "@nivo/bar": "^0.99.0",
    "@nivo/core": "^0.99.0",
    "@supabase/supabase-js": "^2.48.1",
    "@tanstack/react-query": "^5.62.8",
    "dayjs": "^1.11.13",
    "i18next": "^25.7.3",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-i18next": "^15.1.4",
    "react-router-dom": "^7.0.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "rollup-plugin-visualizer": "^6.0.5",
    "terser": "^5.44.1",
    "typescript": "^5.9.3",
    "vite": "^7.2.4"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "biome format --write",
      "biome lint --write",
      "bash -c 'tsc --noEmit'"
    ],
    "*.{json,md}": [
      "biome format --write"
    ]
  }
}
