{
  "name": "heatpump-metrics-ui",
  "version": "1.4.6",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/bosch-buderus-wp/heatpump-metrics-ui.git"
  },
  "type": "module",
  "scripts": {
    "dev": "vite",
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "build": "vite build",
    "build:dev": "vite build --mode development",
    "build:prod": "vite build --mode production",
    "check": "biome check .",
    "check:write": "biome check --write .",
    "preview": "vite preview",
    "prepare": "husky",
    "release": "npm run release:tag && npm run release:push",
    "release:tag": "git tag v$(node -p \"require('./package.json').version\")",
    "release:push": "git push origin v$(node -p \"require('./package.json').version\")"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/icons-material": "^7.3.7",
    "@mui/material": "^7.3.7",
    "@mui/x-data-grid": "^8.25.0",
    "@nivo/bar": "^0.99.0",
    "@nivo/core": "^0.99.0",
    "@nivo/scatterplot": "^0.99.0",
    "@supabase/supabase-js": "^2.91.0",
    "@tanstack/react-query": "^5.90.19",
    "dayjs": "^1.11.19",
    "i18next": "^25.8.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-i18next": "^16.5.3",
    "react-router-dom": "^7.12.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^25.0.9",
    "@types/react": "^19.2.9",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "^4.0.17",
    "@vitest/ui": "^4.0.17",
    "happy-dom": "^20.3.4",
    "husky": "^9.1.7",
    "jsdom": "^27.4.0",
    "lint-staged": "^16.2.7",
    "rollup-plugin-visualizer": "^6.0.5",
    "terser": "^5.46.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.17"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "biome check --write",
      "bash -c 'tsc --noEmit'",
      "bash -c 'npm test'"
    ],
    "*.json": [
      "biome check --write --files-ignore-unknown=true"
    ]
  }
}
